<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutMain"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0px"
        android:layout_height="110dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/movieImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="#000000"
            android:padding="1dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/movieImage"
        android:layout_weight="3" >

        <LinearLayout
            android:id="@+id/movieNameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/movieName"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textColor="#DF0101"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/movieDirectorLabelLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movieNameLabel"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/movieDirectorlabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/movieDirector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/movieViewsLabelLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movieDirectorLabelLayout"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/movieViewslabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/movieViews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movieViewsLabelLayout"
            android:orientation="horizontal" >

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" >
            </View>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/movieBookButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blank"
            android:orientation="horizontal" >

            <View
                android:layout_width="5dp"
                android:layout_height="30dp" >
            </View>

            <Button
                android:id="@+id/movieBook"
                android:layout_width="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_height="30dp"
                android:background="#DF0101"
                android:text="BOOK TICKET"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>